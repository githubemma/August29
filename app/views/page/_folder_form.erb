<div id="add-folder-form" class="modal" data-backdrop="static" data-keyboard="false">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <b>${formTitle}</b>
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
      </div>
      <div class="modal-body">
        <form id="folder-form" class="mb-20">

          <input type="hidden" name="folder_id" value="${folder_id}">

          <div class="form-group">
            <label for="name">Folder name</label>
            <input type="text" name="name" class="form-control" id="name" value="${name}">
          </div>
        </form>

        <div class="row">
          <div class="modal-footer">
            <div class="pull-left">
              <button class="secondary-button" data-dismiss="modal">Cancel</button>
            </div>

            <div class="pull-right">
              {{if folder_id}}
              <button class="btn btn-sm btn-danger" id="delete-folder">Delete Folder</button>
              {{/if}}
              <button class="primary-button" id="save-folder">Save</button>
            </div>
          </div>
        </div>

      </div>
    </div>
  </div>
</div>