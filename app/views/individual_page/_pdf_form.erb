<div id="show-pdf-form" class="modal" data-backdrop="static" data-keyboard="false">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <b>Save as PDF</b>
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
      </div>
      <div class="modal-body">
        <form action="#" id="pdf-form">
          <input type="hidden" name="page_id" value="${page_id}">

          <h4>${title}</h4>

          <div class="col-xs-7">
              <span class="checkbox">
            <input type="checkbox" name="download" value="text"> Download all
          </span>

          <span class="checkbox">
            <input type="checkbox" name="download" value="text"> Download selected items and/or columns
          </span>
          </div>

          <div class="col-xs-5">
            <p>Download with:</p>
            <span class="checkbox">
              <input type="checkbox" name="download-option" value="images"> Images
            </span>
            <span class="checkbox">
              <input type="checkbox" name="download-option" value="text"> Text
            </span>
          </div>

          <div class="row">
            <div class="col-xs-12">
              <div class="pull-left">
                <button class="primary-button" id="download-pdf">Download</button>
              </div>
            </div>
          </div>

        </form>

      </div>
    </div>
  </div>
</div>