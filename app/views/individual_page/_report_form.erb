<div id="show-report-form" class="modal" data-backdrop="static" data-keyboard="false">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <b>${formTitle}</b>
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
      </div>
      <div class="modal-body">
        <form action="" id="report-form" class="mb-20">
          <input type="hidden" name="column_id" value="${column_id}">
          <input type="hidden" name="item_id" value="${item_id}">
          <input type="hidden" name="page_id" value="${page_id}">
          <input type="hidden" name="type" value="${type}">

          <div class="form-group">
            <label for="name">Your name</label>
            <input type="text" name="name" class="form-control" id="name">
          </div>

          <div class="form-group">
            <label for="reason">Reason</label>
            <textarea name="reason" id="reason" rows="3" class="form-control"></textarea>
          </div>
        </form>

        <div class="row">
          <div class="modal-footer">
            <div class="pull-left">
              <button class="secondary-button" data-dismiss="modal">Cancel</button>
            </div>

            <div class="pull-right">
              <button class="primary-button" id="report">Report</button>
            </div>
          </div>
        </div>

      </div>
    </div>
  </div>
</div>