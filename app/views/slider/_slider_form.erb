<div id="add-slider-form" class="modal" data-backdrop="static" data-keyboard="false">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <b>${formTitle}</b>
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
      </div>
      <div class="modal-body">
        <form action="" id="slider-form" class="mb-20">
          <input type="hidden" name="slider_id" value="${slider_id}">

          <div class="form-group">
            <label for="name">Slider name</label>
            <input type="text" name="name" class="form-control" id="name" value="${name}">
          </div>

          <div class="form-group">
            <label for="height">Slider height (px)</label>
            <input type="text" name="height" class="form-control" id="height"
                   value="{{if height}}${height}{{else}}240{{/if}}">
          </div>

          <div class="form-group">
            <label for="speed">Slider speed (1000 = 1s)</label>
            <input type="text" name="speed" class="form-control" id="speed"
                   value="{{if speed}}${speed}{{else}}1000{{/if}}">
          </div>

          <div class="form-group">
            <label for="duration">Slider duration (1000 = 1s)</label>
            <input type="text" name="duration" class="form-control" id="duration"
                   value="{{if duration}}${duration}{{else}}5000{{/if}}">
          </div>

        </form>

        <div class="row">
          <div class="modal-footer">
            <div class="pull-left">
              <button class="secondary-button" data-dismiss="modal">Cancel</button>
            </div>

            <div class="pull-right">
              {{if slider_id}}
              <button class="btn btn-sm btn-danger" id="delete-slider">Delete Slider</button>
              {{/if}}
              <button class="primary-button" id="save-slider">Save</button>
            </div>
          </div>
        </div>

      </div>
    </div>
  </div>
</div>