<div class="container mt-20">
  <div class="row">
    <div class="col-xs-4 col-xs-offset-4">

      <% if admin_signed_in? %>
      Logged <%= current_admin.email %>
      <% else %>
      Login Please
      <% end %>

      <%= form_for resource_name, resource, :url => session_path(resource_name) do |f| %>
      <div class="form-group">
        <%= f.label :email %><br />
        <%= f.text_field :email, autofocus: true, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :password %><br />
        <%= f.password_field :encrypted_password, autocomplete: "off", class: 'form-control'  %>
      </div>

      <div>
        <%= f.submit "Login", class: 'primary-button' %>
      </div>
      <% end %>


    </div>
  </div>
</div>