<div id="add-item-form" class="modal" data-backdrop="static" data-keyboard="false">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <b>${formTitle}</b>
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
      </div>
      <div class="modal-body">
        <form enctype="multipart/form-data" id="item-form" class="mb-20">

          <input type="hidden" name="item_id" value="${item_id}">
          <input type="hidden" name="page_id" value="${page_id}">
          <input type="hidden" name="column_id" value="${column_id}">
          <input type="hidden" name="type" value="${type}">
          <input type="hidden" name="status" value="${status}">

          <div class="form-group">
            <label for="title">Item title</label>
            <input type="text" name="title" class="form-control input-sm" id="title" value="${title}">
          </div>

          <div class="form-group">
            <label for="description">Item description</label>
            <textarea rows="3" name="description" id="description" class="form-control">${description}</textarea>
          </div>

          <div class="form-group">
            <label for="link">Link with URL</label>
            <input type="hidden" name="link" class="form-control input-sm" id="link" value="">

            {{if links}}

            {{each links}}
            <div class="row separate-links mb-10">
              <div class="col-xs-1"><button class="btn btn-sm btn-danger remove-link-row">X</button></div>
              <div class="col-xs-5">
                <input type="text" name="separate-link-title" class="form-control input-sm" value="${title}" placeholder="title">
              </div>
              <div class="col-xs-6">
                <input type="text" name="separate-link" class="form-control input-sm" value="${link}" placeholder="link">
              </div>
            </div>
            {{/each}}

            {{else}}
            <div class="row separate-links mb-10">
              <div class="col-xs-6">
                <input type="text" name="separate-link-title" class="form-control input-sm" value="" placeholder="title">
              </div>
              <div class="col-xs-6">
                <input type="text" name="separate-link" class="form-control input-sm" value="" placeholder="link">
              </div>
            </div>
            {{/if}}
          </div>

          <button class="btn btn-sm btn-success mb-15" id="add-item-link">Add another link</button>

          {{if img}}
          <div class="preview">
            <img src="${img}" alt="${title}" class="img-thumbnail">
          </div>
          {{/if}}

          <div class="form-group">
            <label for="img">Image: ${originalImg}</label>
            <input type="file" name="img" id="img" value="">
          </div>
        </form>

        <div class="row">
          <div class="modal-footer">
            <div class="pull-left">
              <button class="secondary-button" data-dismiss="modal">Cancel</button>
            </div>

            <div class="pull-right">
              {{if item_id}}
              <button class="btn btn-sm btn-danger" id="delete-item">Delete Item</button>
              {{/if}}
              <button class="primary-button" id="save-item">Submit</button>
            </div>
          </div>
        </div>

      </div>
    </div>
  </div>
</div>