<form action="" id="article-form" class="mb-20">
  <div class="pull-left">
    <h3 style="margin-top: 0;" id="form-title">${formTitle}</h3>
  </div>

  <div class="pull-right">
    <button class="primary-button" id="save-article">Save</button>
  </div>

  <div class="col-xs-12">
    <input type="hidden" name="article_id" value="${article_id}">

    <div class="checkbox">
      {{if status}}
      <label><input type="checkbox" name="status" id="status" value="1" checked>Show</label>
      {{else}}
      <label><input type="checkbox" name="status" id="status" value="1">Show</label>
      {{/if}}
    </div>

    <div class="form-group">
      <label for="header">Header</label>
      <input type="text" name="header" class="form-control" id="header" value="${header}">
    </div>

    <div class="form-group">
      <label for="text">Article body</label>
      <textarea rows="10" name="text" class="form-control" id="text">${text}</textarea>
    </div>
  </div>
</form>